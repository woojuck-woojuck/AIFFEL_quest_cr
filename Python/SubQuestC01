        "#단어 뒤집기\n",
        "word = \"banana apple fruite vechile \"\n",
        "cleaned_word = ''.join(e for e in word if e.isalnum()).lower()\n",
        "print(cleaned_word)\n",
        "reversed_word = cleaned_word[::-1]\n",
        "print(f\"뒤집은 단어: {reversed_word}\")"
      ],
